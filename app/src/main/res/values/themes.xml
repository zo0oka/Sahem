<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Sahem" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="colorPrimary">@color/primary_color</item>
        <!-- To change progress bar color -->
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:statusBarColor" tools:targetApi="21">@color/primary_color</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/primary_color</item>
